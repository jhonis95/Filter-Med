---
import ContactBtn from "./contactBtn.astro"

const {title, subTitle, background}=Astro.props
---
<section class=" w-full h-[270px] md:h-fit 2xl:h-[690px]">
    <div class=" relative text-white w-full h-full">
        <div class="absolute z-10 flex items-center justify-around gap-5 h-auto top-[120px] md:top-0 w-full md:w-fit md:left-[170px] 2xl:left-[308px] md:h-full md:justify-start flex-col md:flex-row lg:gap-14 xl:gap-28">
            <div class=" flex flex-col h-full justify-center items-center mx-3 gap-4 md:gap-11 md:items-start font-Jakarta font-bold text-center">
                <h3 class=" text-2xl lg:text-5xl w-[250px] md:text-left lg:w-[500px] 2xl:w-[662px] 2xl:text-[64px]">{title}</h3>
                <h4 class=" text-base lg:text-2xl max-w-[400px] md:text-justify lg:max-w-[525px] 2xl:max-w-[861px] 2xl:text-3xl">{subTitle}</h4>
            </div>
        </div>
        <img class=" w-full h-full object-cover" src={background.src} alt="">
    </div>
</section>

<div class=" flex justify-center items-center h-[171px] xl:mt-8">
    <div class=" flex flex-col items-center justify-around bg-primary w-full mx-3 rounded-lg md:w-4/5 h-[71px] md:h-[100px] md:rounded-3xl xl:h-[173px] 2xl:w-[1435px]">
        <div class=" w-fit">
            <h5 class="font-Jakarta font-bold text-white w-fit text-base md:text-2xl xl:text-4xl">Veja nossos produtos e entre em contato conosco</h5>
        </div>
        <div class=" sm:bottom-[-20px] lg:bottom-[-20px] left-16">
            <ContactBtn btnContent="Entre em contato"/>
        </div>
    </div>
</div>