---
import Logo from './logo.astro'
import Navigation from './navigation.astro'

import { getCollection } from 'astro:content';
const navbarDataCms = await getCollection("navigation_bar");
const navdata=[
    {
        link:'/product',
        title:navbarDataCms[0].data.navigation[0].text,
        id:1
    },{
        link:'/service',
        title:navbarDataCms[0].data.navigation[1].text,
        id:2
    },{
        link:'/about',
        title:navbarDataCms[0].data.navigation[2].text,
        id:3
    }
]
---
<section class="bg-white w-full h-[60px] sm:h-[101px] z-50 sticky top-0 shadow-md">
    <div class=" w-full h-full flex items-center justify-around min-[500px]:justify-between min-[500px]:px-5 lg:justify-around lg:px-0">
        <Logo logoimg={navbarDataCms[0].data.logo_container.logo} companyName={navbarDataCms[0].data.logo_container.text}/>
        <Navigation navlist={navdata}/>
    </div>
</section>