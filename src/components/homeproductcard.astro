---
const componentData=Astro.props
import { Image } from "astro:assets";
---

<div>
    <div class=" bg-primary w-[468px] h-[405px] rounded-xl relative">
        <div class=" absolute w-[279px] h-[329px] top-9 left-[-150px]">
            <Image
                class="rounded-2xl w-full h-full" 
                src={componentData.componentData.product_card_image}
                alt={'product-section-image'}
            >
        </div>
        <div class=" relative left-[170px] top-9 w-[277px] max-h-[350px] overflow-y-scroll no-scrollbar ">
            <h5 class=" text-white font-bold text-[32px]">{componentData.componentData.product_card_name}</h5>
            <h6 class=" text-white font-bold text-base text-justify">{componentData.componentData.product_card_content}</h6>
        </div>
    </div>
</div>