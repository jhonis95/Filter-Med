---
import { Image } from "astro:assets";
const {Data}=Astro.props
import ContactBtn from './contactBtn.astro';
---
<section class=" esconder max-w-[1556px] gap-10 2xl:gap-16 flex flex-col xl:flex-row items-center">
    <Image class=" rounded-lg  w-[295px] h-[281px] md:w-[476px] md:h-[452px] 2xl:w-[621px] 2xl:h-[590px]" src={Data.oil_service_image} alt="Ã³leo image"/>
    <div class="flex flex-col gap-[30px] md:gap-[64px]">
        <div class="font-Jakarta max-w-[817px] flex flex-col gap-[30px]">
            <h4 class=" text-[20px] md:text-2xl lg:text-3xl xl:text-4xl text-primary text-center xl:text-left">{Data.title}</h4>
            <div class=" flex flex-col gap-5 mx-3 xl:mx-0">
                {
                    Data.paragraphs.map((paragraph:any)=>{
                        return(
                            <p class="text-base md:text-lg text-justify">{paragraph.paragraph_content}</p>
                        )
                    })
                }
            </div>
            <div class=" flex flex-col gap-5 w-full items-center">
                <div class=" flex flex-col gap-5 mx-10 lg:mx-0">
                    {
                        Data.bullet_points.map((bullet_point_content:any)=>{
                            return(
                            <div class=" flex justify-start items-center gap-5">
                                <div class=" bg-secondary rounded-full min-w-[8px] min-h-[8px] lg:min-w-[14px] lg:min-h-[14px]"></div>
                                <p class="font-bold text-sm md:text-lg">{bullet_point_content.bullet_point_content}</p>
                            </div>
                            )
                        })
                    }
                </div>
            </div>
        </div>
        <div class=" flex justify-center">
            <ContactBtn btnContent={Data.button_text} btnLink={Data.button_link}/>
        </div>
    </div>
</section>