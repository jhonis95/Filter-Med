---
import { getCollection } from 'astro:content';
import { Image } from "astro:assets";
const homePageData = await getCollection("home_page");
---
<section class=" w-full min-h-64 pb-[174px] md:pb-0 2xl:h-4/6">
    <div class=" relative text-white w-full xl:h-[600px] 2xl:h-full">
        <Image class=" absolute w-full h-full object-cover" loading="lazy" src={homePageData[0].data.background_image} alt={'test'}/>
        <div class=" flex items-center justify-around gap-5 h-auto py-12 md:h-full md:justify-evenly flex-col md:flex-row lg:justify-center lg:gap-14 xl:gap-28">
            <div class=" z-10 flex flex-col h-full justify-center items-center mx-3 gap-4 md:gap-11 md:items-start font-Jakarta font-bold text-center">
                <h3 class=" text-2xl lg:text-5xl w-[250px] md:text-left lg:w-[500px] 2xl:w-[662px] 2xl:text-[64px]">{homePageData[0].data.headertitle}</h3>
                <h4 class=" text-base lg:text-2xl max-w-[400px] md:text-justify lg:max-w-[525px] 2xl:max-w-[861px] 2xl:text-3xl">{homePageData[0].data.subtitle}</h4>
            </div>
            <div class=" absolute bottom-[-174px] md:relative md:bottom-0">
                <div class=" bg-primary rounded-lg text-center font-Jakarta font-bold flex flex-col items-center justify-center gap-4 py-3 w-[248px] max-h-[381px] lg:w-[370px] lg:p-9 2xl:w-[464px] 2xl:gap-8">
                    <h4 class=" text-base lg:text-3xl 2xl:text-[40px]">{homePageData[0].data.home_header_card.card_title}</h4>
                    <p class=" text-sm lg:text-xl 2xl:text-2xl">{homePageData[0].data.home_header_card.card_subtitle}</p>
                    <button class=" bg-secondary lg:px-6 lg:py-4 w-[146px] h-[44px] lg:w-auto lg:h-auto 2xl:w-[300px] 2xl:h-[90px] 2xl:px-0 2xl:py-0 rounded-lg shadow-lg">
                        <a class=" text-white font-Jakarta font-bold text-sm lg:text-base 2xl:text-4xl" href="">{homePageData[0].data.home_header_card.card_button_text}</a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
