---
import Herosection from '../components/herosection.astro';
import ContactBtn from './contactBtn.astro';
---
<section class=" h-fit 2xl:h-screen">
    <Herosection/>
    <div class=" flex justify-center items-center h-[171px] sm:h-2/6 sm:mt-5">
        <div class=" flex flex-col items-center gap-4 bg-primary w-full mx-3 rounded-lg sm:gap-0 sm:inline sm:relative md:w-4/5 h-[71px] md:h-[100px] md:rounded-3xl xl:h-[173px] 2xl:w-[1435px]">
            <div class=" sm:relative sm:left-16 sm:top-3 xl:top-[27px] w-fit">
                <h5 class="font-Jakarta font-bold text-white w-fit text-base md:text-2xl xl:text-4xl">Nome – produto de venda principal</h5>
                <p class="font-Jakarta font-bold text-white text-center w-full sm:w-fit sm:text-left text-sm md:text-lg xl:text-xl">pequena descrição do produto</p>
            </div>
            <div class="sm:absolute sm:bottom-[-20px] lg:bottom-[-20px] left-16">
                <ContactBtn btnContent="Saiba Mais"/>
            </div>
        </div>
    </div>
</section>