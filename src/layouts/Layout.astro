---
import Footer from "../components/footer.astro"
import Navbar from "../components/navbar.astro"
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Descubra as soluções inovadoras da Filter Med para tratamento de resíduos de aterro. Somos especializados em sistemas avançados de filtragem para gerenciar chorume e promover a sustentabilidade.">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="../global.css">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<script defer src="/js/animation.js"></script>
		<title>Filter Med</title>
		<ClientRouter/>
	</head>
	<body>
		<Navbar/>
		<slot />
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		background-color: var(--white);
	}
	
	/* Firefox (uncomment to work in Firefox, although other properties will not work!)  */
	* {
	  scrollbar-width: thin;
	  scrollbar-color: #D4DAE1 #F3F4F6;
	}

	/* Chrome, Edge and Safari */
	*::-webkit-scrollbar {
	  height: 8px;
	  width: 8px;
	}
	*::-webkit-scrollbar-track {
	  border-radius: 5px;
	  background-color: #F3F4F6;
	}

	*::-webkit-scrollbar-track:hover {
	  background-color: #EAF0F8;
	}

	*::-webkit-scrollbar-track:active {
	  background-color: #EAF0F8;
	}

	*::-webkit-scrollbar-thumb {
	  border-radius: 10px;
	  background-color: #D4DAE1;
	}

	*::-webkit-scrollbar-thumb:hover {
	  background-color: #B5BAC0;
	}

	*::-webkit-scrollbar-thumb:active {
	  background-color: #B5BAC0;
	}
</style>
